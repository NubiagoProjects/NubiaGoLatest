# ============================================================================
# VERCEL ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control
# ============================================================================

# ============================================================================
# FIREBASE CONFIGURATION (Client-side)
# ============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# ============================================================================
# FIREBASE ADMIN (Server-side only)
# ============================================================================
FIREBASE_ADMIN_PROJECT_ID=your_project_id_here
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email@your_project.iam.gserviceaccount.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=your_database_connection_string_here

# ============================================================================
# AUTHENTICATION & SESSION
# ============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=https://your-domain.vercel.app

# ============================================================================
# EMAIL SERVICE (SendGrid)
# ============================================================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=admin@yourdomain.com

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
PLAUSIBLE_DOMAIN=yourdomain.com
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# ============================================================================
# PAYMENT PROCESSING (Stripe)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# SHIPPING & LOGISTICS
# ============================================================================
SHIPPO_API_KEY=your_shippo_api_key_here
SHIPPO_WEBHOOK_SECRET=your_shippo_webhook_secret_here

# ============================================================================
# IMAGE STORAGE & OPTIMIZATION
# ============================================================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================================================
# CHAT & COMMUNICATION
# ============================================================================
SENDBIRD_APP_ID=your_sendbird_app_id_here
SENDBIRD_API_TOKEN=your_sendbird_api_token_here

# ============================================================================
# SECURITY & RATE LIMITING
# ============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_CHAT=true
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true

# ============================================================================
# PERFORMANCE & CACHING
# ============================================================================
CACHE_TTL=3600
REDIS_URL=your_redis_url_here

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# ============================================================================
# CUSTOM DOMAIN (if using)
# ============================================================================
CUSTOM_DOMAIN=yourdomain.com
CUSTOM_DOMAIN_VERIFICATION=your_verification_token_here
