{
  "name": "nubiaGo-ecommerce",
  "version": "1.0.0",
  "description": "A modern, responsive ecommerce website built with Next.js 14",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__ --coverage",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:firestore": "firebase deploy --only firestore:rules,firestore:indexes",
    "deploy:storage": "firebase deploy --only storage",
    "deploy:all": "npm run build && firebase deploy --only hosting,firestore:rules,firestore:indexes,storage",
    "deploy:functions": "firebase deploy --only functions"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@hookform/resolvers": "^3.3.0",
    "@sendbird/uikit-react": "^3.5.0",
    "@sentry/nextjs": "^7.0.0",
    "@sentry/react": "^7.0.0",
    "@sentry/tracing": "^7.0.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "firebase": "^12.0.0",
    "firebase-admin": "^13.4.0",
    "firebase-frameworks": "^0.4.2",
    "firebase-functions": "^6.4.0",
    "jest": "^29.7.0",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "nodemailer": "^6.9.0",
    "plausible-tracker": "^0.1.11",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "null-loader": "^4.0.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": "22.x"
  },
  "keywords": [
    "ecommerce",
    "nextjs",
    "react",
    "typescript",
    "tailwind-css",
    "responsive",
    "modern-ui",
    "africa",
    "online-shopping",
    "yellow-card",
    "sendbird",
    "shipping",
    "analytics",
    "sentry",
    "sendgrid"
  ],
  "author": "NubiaGo Team",
  "license": "MIT"
}
